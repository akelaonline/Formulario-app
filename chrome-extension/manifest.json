{
  "manifest_version": 3,
  "name": "Formulario App Automation",
  "version": "1.0",
  "description": "Automatizaci√≥n de formularios para Formulario App",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost:*/*",
      "*://127.0.0.1:*/*"
    ]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
